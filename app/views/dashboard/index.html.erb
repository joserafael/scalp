<% content_for :title, "Dashboard - Scalp Trading" %>

<div class="row">
  <div class="col-12">
    <h1 class="mb-4">
      <i class="bi bi-graph-up"></i>
      Dashboard de Trading
    </h1>
  </div>
</div>

<!-- Estatísticas Gerais -->
<div class="row mb-4 stats-container">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title" id="total-trades"><%= @stats[:total_trades] %></h4>
            <p class="card-text">Total de Operações</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-list-ul fs-1"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title" id="open-trades"><%= @stats[:open_trades] %></h4>
            <p class="card-text">Operações em Aberto</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-clock fs-1"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title" id="total-pairs"><%= @stats[:total_pairs] %></h4>
            <p class="card-text">Pareamentos Realizados</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-check-circle fs-1"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4 class="card-title" id="total-profit">R$ <%= number_with_precision(@stats[:total_profit], precision: 2) %></h4>
            <p class="card-text">Lucro Total</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-currency-dollar fs-1"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Ações Rápidas -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Ações Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="d-flex gap-3">
          <%= link_to new_trade_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle"></i> Nova Operação
          <% end %>
          
          <%= link_to trades_path, class: "btn btn-outline-primary" do %>
            <i class="bi bi-list"></i> Ver Todas as Operações
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Operações Recentes -->
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Operações Recentes</h5>
        <%= link_to "Ver Todas", trades_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <% if @recent_trades.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Criptomoeda</th>
                  <th>Tipo</th>
                  <th>Quantidade</th>
                  <th>Preço Unitário</th>
                  <th>Status</th>
                  <th>Data</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_trades.each do |trade| %>
                  <tr>
                    <td><%= trade.cryptocurrency.to_s %></td>
                    <td>
                      <span class="badge <%= trade.buy? ? 'bg-success' : 'bg-danger' %>">
                        <%= trade.buy? ? 'Compra' : 'Venda' %>
                      </span>
                    </td>
                    <td><%= number_with_precision(trade.quantity, precision: 8) %></td>
                    <td>R$ <%= number_with_precision(trade.unit_price, precision: 2) %></td>
                    <td>
                      <span class="badge <%= trade.open? ? 'bg-warning' : 'bg-success' %>">
                        <%= trade.open? ? 'Em Aberto' : 'Pareado' %>
                      </span>
                    </td>
                    <td><%= trade.created_at.strftime('%d/%m/%Y %H:%M') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="text-muted mt-2">Nenhuma operação encontrada</p>
            <%= link_to "Criar primeira operação", new_trade_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Pareamentos Recentes -->
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Pareamentos Recentes</h5>
      </div>
      <div class="card-body">
        <% if @recent_pairs.any? %>
          <% @recent_pairs.each do |pair| %>
            <div class="border-bottom pb-3 mb-3">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h6 class="mb-1"><%= pair.buy_trade.cryptocurrency.to_s %></h6>
                  <small class="text-muted">
                    Compra: R$ <%= number_with_precision(pair.buy_trade.unit_price, precision: 2) %><br>
                    Venda: R$ <%= number_with_precision(pair.sell_trade.unit_price, precision: 2) %>
                  </small>
                </div>
                <div class="text-end">
                  <span class="badge bg-success">+R$ <%= number_with_precision(pair.profit, precision: 2) %></span><br>
                  <small class="text-muted"><%= pair.created_at.strftime('%d/%m %H:%M') %></small>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-arrow-left-right fs-1 text-muted"></i>
            <p class="text-muted mt-2">Nenhum pareamento realizado</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Distribuição por Criptomoeda -->
    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">Operações em Aberto por Crypto</h5>
      </div>
      <div class="card-body">
        <% if @open_trades_by_crypto.any? %>
          <% @open_trades_by_crypto.each do |symbol, count| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span><%= symbol %></span>
              <span class="badge bg-secondary"><%= count %></span>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center">Nenhuma operação em aberto</p>
        <% end %>
      </div>
    </div>
  </div>
</div>