<% content_for :title, "Usuários" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>
            Usuários e suas Operações
          </h5>
          <span class="badge bg-primary"><%= @users.count %> usuários</span>
        </div>
        <div class="card-body">
          <% if @users.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th><i class="fas fa-user me-2"></i>Usuário</th>
                    <th class="text-center">Total de Operações</th>
                    <th class="text-center">Compras</th>
                    <th class="text-center">Vendas</th>
                    <th class="text-center">Abertas</th>
                    <th class="text-center">Última Operação</th>
                    <th class="text-center">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <strong><%= user.name %></strong>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-primary"><%= user.trades.count %></span>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-success"><%= user.trades.buy_orders.count %></span>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-danger"><%= user.trades.sell_orders.count %></span>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-warning text-dark"><%= user.trades.where(status: 'open').count %></span>
                      </td>
                      <td class="text-center">
                        <% if user.trades.any? %>
                          <% last_trade = user.trades.order(created_at: :desc).first %>
                          <small class="text-muted">
                            <%= last_trade.cryptocurrency.symbol %> - 
                            <span class="badge <%= last_trade.buy? ? 'bg-success' : 'bg-danger' %> badge-sm">
                              <%= last_trade.operation_type.upcase %>
                            </span>
                            <br>
                            <span class="text-muted"><%= time_ago_in_words(last_trade.created_at) %> atrás</span>
                          </small>
                        <% else %>
                          <small class="text-muted">Nenhuma</small>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <%= link_to "Ver Operações", trades_path(user_id: user.id), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-users fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">Nenhum usuário encontrado</h5>
              <p class="text-muted">Execute o comando <code>rails db:seed</code> para criar usuários de exemplo.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>