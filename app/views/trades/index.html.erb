<% content_for :title, "Operações - Scalp Trading" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        <i class="bi bi-list-ul"></i>
        Operações de Trading
      </h1>
      <%= link_to new_trade_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle"></i> Nova Operação
      <% end %>
    </div>
  </div>
</div>

<!-- Resumo Estatístico -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-primary"><%= @trades.count %></h4>
        <p class="mb-0">Total de Operações</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-warning"><%= @open_trades.count %></h4>
        <p class="mb-0">Em Aberto</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-success"><%= @trade_pairs.count %></h4>
        <p class="mb-0">Pareamentos</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h4 class="text-info">R$ <%= number_with_precision(@total_profit, precision: 2) %></h4>
        <p class="mb-0">Lucro Total</p>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag "trades", defer: true %>
<% end %>

<!-- Tabs para diferentes visualizações -->
<ul class="nav nav-tabs" id="tradeTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
      <i class="bi bi-list"></i> Todas as Operações
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="open-tab" data-bs-toggle="tab" data-bs-target="#open" type="button" role="tab">
      <i class="bi bi-clock"></i> Em Aberto (<%= @open_trades.count %>)
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pairs-tab" data-bs-toggle="tab" data-bs-target="#pairs" type="button" role="tab">
      <i class="bi bi-arrow-left-right"></i> Pareamentos (<%= @trade_pairs.count %>)
    </button>
  </li>
</ul>

<div class="tab-content" id="tradeTabContent">
  <!-- Todas as Operações -->
  <div class="tab-pane fade show active" id="all" role="tabpanel">
    <div class="card">
      <div class="card-body">
        <% if @trades.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover" id="trades-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Criptomoeda</th>
                  <th>Usuário</th>
                  <th>Tipo</th>
                  <th>Quantidade</th>
                  <th>Preço Unitário</th>
                  <th>Valor Total</th>
                  <th>Status</th>
                  <th>Data</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @trades.each do |trade| %>
                  <tr>
                    <td>#<%= trade.id %></td>
                    <td>
                      <strong><%= trade.cryptocurrency.symbol %></strong><br>
                      <small class="text-muted"><%= trade.cryptocurrency.name %></small>
                    </td>
                    <td>
                      <% if trade.user %>
                        <span class="badge bg-info">
                          <i class="bi bi-person"></i> <%= trade.user.name %>
                        </span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge <%= trade.buy? ? 'bg-success' : 'bg-danger' %>">
                        <i class="bi <%= trade.buy? ? 'bi-arrow-down' : 'bi-arrow-up' %>"></i>
                        <%= trade.buy? ? 'Compra' : 'Venda' %>
                      </span>
                    </td>
                    <td><%= number_with_precision(trade.quantity, precision: 2) %></td>
                    <td>R$ <%= number_with_precision(trade.unit_price, precision: 2) %></td>
                    <td>R$ <%= number_with_precision(trade.total_value, precision: 2) %></td>
                    <td>
                      <% if trade.open? %>
                        <span class="badge bg-warning">
                          <i class="bi bi-clock"></i> Em Aberto
                        </span>
                      <% else %>
                        <span class="badge bg-success">
                          <i class="bi bi-check-circle"></i> Pareado
                        </span>
                      <% end %>
                    </td>
                    <td><%= trade.created_at.strftime('%d/%m/%Y %H:%M') %></td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to trade_path(trade), class: "btn btn-outline-primary btn-sm" do %>
                          <i class="bi bi-eye"></i>
                        <% end %>
                        <% if trade.open? %>
                          <%= link_to trade_path(trade), 
                                    class: "btn btn-outline-danger btn-sm",
                                    data: { method: "delete", confirm: "Tem certeza que deseja excluir esta operação?" } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <h4 class="text-muted mt-3">Nenhuma operação encontrada</h4>
            <p class="text-muted">Comece criando sua primeira operação de trading</p>
            <%= link_to "Criar Operação", new_trade_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Operações em Aberto -->
  <div class="tab-pane fade" id="open" role="tabpanel">
    <div class="card">
      <div class="card-body">
        <% if @open_trades.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Criptomoeda</th>
                  <th>Usuário</th>
                  <th>Tipo</th>
                  <th>Quantidade</th>
                  <th>Preço Unitário</th>
                  <th>Valor Total</th>
                  <th>Data</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @open_trades.each do |trade| %>
                  <tr>
                    <td>
                      <strong><%= trade.cryptocurrency.symbol %></strong><br>
                      <small class="text-muted"><%= trade.cryptocurrency.name %></small>
                    </td>
                    <td>
                      <% if trade.user %>
                        <span class="badge bg-info">
                          <i class="bi bi-person"></i> <%= trade.user.name %>
                        </span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge <%= trade.buy? ? 'bg-success' : 'bg-danger' %>">
                        <i class="bi <%= trade.buy? ? 'bi-arrow-down' : 'bi-arrow-up' %>"></i>
                        <%= trade.buy? ? 'Compra' : 'Venda' %>
                      </span>
                    </td>
                    <td><%= number_with_precision(trade.quantity, precision: 2) %></td>
                    <td>R$ <%= number_with_precision(trade.unit_price, precision: 2) %></td>
                    <td>R$ <%= number_with_precision(trade.total_value, precision: 2) %></td>
                    <td><%= trade.created_at.strftime('%d/%m/%Y %H:%M') %></td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to trade_path(trade), class: "btn btn-outline-primary btn-sm" do %>
                          <i class="bi bi-eye"></i>
                        <% end %>
                        <%= link_to trade_path(trade), 
                                    class: "btn btn-outline-danger btn-sm",
                                    data: { 
                                      confirm: "Tem certeza que deseja remover esta operação?",
                                      method: "delete"
                                    } do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-clock fs-1 text-muted"></i>
            <h4 class="text-muted mt-3">Nenhuma operação em aberto</h4>
            <p class="text-muted">Todas as operações foram pareadas com sucesso</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Pareamentos -->
  <div class="tab-pane fade" id="pairs" role="tabpanel">
    <div class="card">
      <div class="card-body">
        <% if @trade_pairs.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Criptomoeda</th>
                  <th>Compra</th>
                  <th>Venda</th>
                  <th>Usuários</th>
                  <th>Quantidade</th>
                  <th>Lucro</th>
                  <th>Data do Pareamento</th>
                </tr>
              </thead>
              <tbody>
                <% @trade_pairs.each do |pair| %>
                  <tr>
                    <td>
                      <strong><%= pair.buy_trade.cryptocurrency.symbol %></strong><br>
                      <small class="text-muted"><%= pair.buy_trade.cryptocurrency.name %></small>
                    </td>
                    <td>
                      <span class="badge bg-success">Compra</span><br>
                      <small>R$ <%= number_with_precision(pair.buy_trade.unit_price, precision: 2) %></small>
                    </td>
                    <td>
                      <span class="badge bg-danger">Venda</span><br>
                      <small>R$ <%= number_with_precision(pair.sell_trade.unit_price, precision: 2) %></small>
                    </td>
                    <td>
                      <div class="d-flex flex-column gap-1">
                        <% if pair.buy_trade.user %>
                          <small><strong>Compra:</strong> <%= pair.buy_trade.user.name %></small>
                        <% end %>
                        <% if pair.sell_trade.user %>
                          <small><strong>Venda:</strong> <%= pair.sell_trade.user.name %></small>
                        <% end %>
                      </div>
                    </td>
                    <td><%= number_with_precision(pair.buy_trade.quantity, precision: 2) %></td>
                    <td>
                      <span class="badge bg-success fs-6">
                        <i class="bi bi-currency-dollar"></i>
                        +R$ <%= number_with_precision(pair.profit, precision: 2) %>
                      </span>
                    </td>
                    <td><%= pair.created_at.strftime('%d/%m/%Y %H:%M') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-arrow-left-right fs-1 text-muted"></i>
            <h4 class="text-muted mt-3">Nenhum pareamento realizado</h4>
            <p class="text-muted">Crie operações de compra e venda para gerar pareamentos automáticos</p>
            <%= link_to "Criar Operação", new_trade_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>